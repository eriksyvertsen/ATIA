run = "python -m atia"
language = "python3"
entrypoint = "atia/__init__.py"
hidden = [".pythonlibs"]
modules = ["python-3.11"]

[nix]
channel = "stable-23_11"

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
enabledForHosting = false
packageSearch = true

[env]
PYTHON_VERSION = "3.11"
PYTHONPATH = "${PYTHONPATH}:${workspaceDir}"

[unitTest]
language = "python3"

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"
